    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "MainUI",
            "request": "launch",
            "mainClass": "com.taskmanager/com.taskmanager.MainUI",
            "projectName": "desktop-assistant"
        },
        {
            "type": "java",
            "name": "MainUI",
            "request": "launch",
            "mainClass": "com.taskmanager.MainUI",
            "projectName": "desktop-assistant"
        },
        {
            "type": "java",
            "name": "Launch MainUI",
            "request": "launch",
            "mainClass": "com.taskmanager.MainUI",
            "projectName": "task-manager",
            "vmArgs": "--module-path \"C:/Program Files/Java/javafx-sdk-21.0.2/lib\" --add-modules javafx.controls,javafx.fxml --enable-native-access=javafx.graphics,org.xerial.sqlitejdbc"
        },
        {
            "type": "java",
            "name": "Attach to Process",
            "request": "attach",
            "hostName": "localhost",
            "port": "<debug port of the debuggee>"
        },
        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Launch Task Manager",
            "request": "launch",
            "mainClass": "com.taskmanager.MainUI",
            "projectName": "desktop-assistant",
            "vmArgs": "--module-path ${workspaceFolder}/target/dependency --add-modules javafx.controls,javafx.fxml,javafx.graphics,javafx.base,javafx.media"
        }
    ]
}